            #            types.textmedia.altLabels {
            #                0 = Above, fullscreen
            #            }
        }
        # remove not needed image coloumns for frontend, 2 cols are enough
        imagecols.removeItems = 2,3,4,5,6,7,8

        # disable rarely used fields
        header_position.disabled = 1
        date.disabled = 1
        linkToTop.disabled = 1
        fe_group.disabled = 1
        spaceBefore.disabled = 1
        spaceAfter.disabled = 1
        section_frame.disabled = 1
        imageborder.disabled = 1
        image_compression.disabled = 1
        image_effects.disabled = 1
        image_noRows.disabled = 1
        imagecaption_position.disabled = 1
        rte_enabled.disabled = 1
