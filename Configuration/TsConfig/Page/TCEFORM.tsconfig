    pages {

    }
    tt_content {
        layout {
            altLabels {
                0 = normal
                1 = Light Gray
                2 = zxv
                3 = xyz
            }
            addItems {
                #4 = highlighted
                #                5 = hellgraue Box
            }
            removeItems = 2,3,4
        }
        # change default headline layout
        header_layout {
            removeItems = 4,5
            addItems {

            }
            altLabels {
                100 = (versteckt)
                0 = H1
                1 = Standard H2
                2 = Standard H3
                3 = Standard H4
            }
        }
        # remove not needed image positions for frontend
        imageorient {
            types.textmedia.removeItems = 1,2,9,10,17,18
            types.textpic.removeItems = 0,1,2,9,10,17,18,25
            types.image.removeItems = 1,2,8,9,10,17,18,25,26
